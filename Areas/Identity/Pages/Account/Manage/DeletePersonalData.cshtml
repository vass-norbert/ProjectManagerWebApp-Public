@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
}

<h2 class="text-center fw-bold mb-4">Delete user account</h2>

<div class="row">
    <div class="mx-auto col-xxl-4 col-xl-5 col-lg-6 col-md-7 col-12">
        <p class="text-center mb-5">
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>

        <div>
            <form id="delete-user" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-input" autocomplete="off" aria-required="true" placeholder="Please enter your password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                <div class="text-center">
                    <button class="button-danger px-4" type="submit">Delete data and close my account</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
