@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h2 class="text-center fw-bold mb-4">Manage personal data</h2>

<div class="row">
    <div class="mx-auto col-xxl-4 col-xl-5 col-lg-6 col-md-7 col-12">
        <p>Your account contains personal data. This page allows you to download or delete that data.</p>
        <p>
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>

        <hr />

        <p class="float-end pe-2">
            <a id="delete" asp-page="DeletePersonalData" class="button-danger-no-bg">Delete account</a>
        </p>

        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="button-primary-no-bg ps-2" type="submit">Download data</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
