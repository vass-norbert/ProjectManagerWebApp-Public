@model IEnumerable<ProjectManager.Models.Project>

@{
    ViewData["Title"] = "Personal projects";
}

<div class="container">
    <h1 class="text-center mt-4">Personal Projects</h1>
    <p class="h5 text-center mb-5 fst-italic text-muted">These are the projects that <span class="fw-bold text-decoration-underline">you</span> created!</p>

    @if (Enumerable.Any(Model))
    {
        <p class="px-4 mb-2 text-end"><a asp-action="Create" class="button-secondary-no-bg"><i class="bi bi-plus-lg"></i>&nbsp;Create new project</a></p>

        <div class="container secondary-bg">
            <hr class="mx-0 mt-0 mb-2" />
            @foreach (var item in Model)
            {
                <p class="p-0 m-0 small text-muted">Created &#64; @Html.DisplayFor(modelItem => item.CreationDate)</p>
                <p class="p-0 m-0 text-break"><a class="project-list-title" asp-action="Details" asp-route-projectId="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a></p>
                <p class="mb-4 fst-italic text-break project-list-description">@Html.DisplayFor(modelItem => item.Description)</p>
                <hr class="mx-0 my-2" />
            }
        </div>
    }
    else
    {
        <hr />
        <p class="text-center h5 pt-5">Looks like you don't have any projects! Why not make one right now?</p>
        <p class="mt-3 text-center"><a asp-action="Create" class="button-secondary-no-bg"><i class="bi bi-plus-lg"></i>&nbsp;Create new project</a></p>
    }
</div>