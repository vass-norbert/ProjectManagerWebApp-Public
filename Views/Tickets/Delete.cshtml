@model ProjectManager.Models.Ticket

@{
    ViewData["Title"] = "Delete ticket";
}

<div class="container">
    <p class="h3 text-center mt-5">Are you sure you want to permanently delete this ticket?</p>

    <hr class="w-75 mx-auto" />

    <p class="h5 text-center mt-5">Ticket name:</p>
    <p class="h4 fw-bold text-center mb-5">@Model.Name</p>

    <hr class="w-50 mx-auto" />

    <form asp-action="Delete" class="text-center mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="button-danger">Delete Ticket</button>
        <div class="mt-3">
            <a asp-action="Edit" asp-route-ticketId="@Model.Id" asp-route-projectId="@Model.ProjectId" class="button-primary-no-bg">Back to Edit view</a>
        </div>
    </form>
</div>